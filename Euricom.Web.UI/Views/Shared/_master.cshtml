<!DOCTYPE html> @*HTML5 doctype to support bootstrap HTML element and CSS properties*@
<html lang="en">
<head>
   <meta charset="utf-8">
   <title>@ViewBag.Title</title>
   <meta name="viewport" content="width=device-width, initial-scale=1.0"> @*Responsive design*@
   <meta name="description" content="">
   <meta name="author" content="">
   <link href="@Url.Content("~/css/bootstrap.css")" rel="stylesheet" type="text/css" />
   <link href="@Url.Content("~/css/euricom.css")" rel="stylesheet" type="text/css" />
   <link href="@Url.Content("~/css/bootstrap-responsive.css")" rel="stylesheet" type="text/css" />
   <script src="@Url.Content("~/js/jquery-1.8.0.min.js")"></script>
   <script src="@Url.Content("~/js/knockout-2.1.0.js")"></script>
</head>
    <body>
        
        @{
            var url = Request.Url.ToString().ToLower();
            var page = url.Substring(url.LastIndexOf("/") + 1);
        }

        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="brand" href="#">Euricom</a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li class="@(page == "" ? "active" : "")"><a href="@Url.Action("Index", "Home")">Timesheets</a></li>
                            <li class="@(page == "github" ? "active" : "")"><a href="@Url.Action("Github", "Home")">GitHub</a></li>
                            <li class="@(page == "bootstrap" ? "active" : "")"><a href="@Url.Action("Bootstrap", "Home")">Bootstrap</a></li>
                            <li class="@(page == "knockout" ? "active" : "")"><a href="@Url.Action("Knockout", "Home")">Knockout</a></li>
                            <li class="@(page == "mongo" ? "active" : "")"><a href="@Url.Action("Mongo", "Home")">MongoDB</a></li>
                            <li class="@(page == "appharbor" ? "active" : "")"><a href="@Url.Action("AppHarbor", "Home")">AppHarbor</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            @RenderBody()    
        </div>
    
        <script src="@Url.Content("~/js/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/js/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/js/bootstrap.min.js")"></script>
    </body>
</html>
